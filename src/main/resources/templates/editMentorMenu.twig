                </div>
            </li>
        </ul>
    </div>
</nav>


<div id="front">
    <form method="POST">
        <div id="front">
            <div class="form-group">
                <label for="questId">Identification number</label>
                <input type="text" id="mentorid" class="form-control" name="mentorId" placeholder="Type id...">
            </div>
            <div class="form-action">
                <button type="submit" class="btn btn-primary text-center" value="Submit">Edit Mentor</button>
            </div>
        </div>
    </form>
    <table>
        <tr>
            <th>ID</th>
            <th>Login</th>
            <th>Password</th>
            <th>Student Type</th>
            <th>First Name</th>
            <th>Last Name</th>
        </tr>
        {% for mentor in mentorsList %}
            <tr>
                <td>{{ mentor.id }}</td>
                <td>{{ mentor.login }}</td>
                <td>{{ mentor.password }}</td>
                <td>{{ mentor.userType }}</td>
                <td>{{ mentor.firstname }}</td>
                <td>{{ mentor.lastname }}</td>
            </tr>
        {% endfor %}

    </table>





</div>
</body>
