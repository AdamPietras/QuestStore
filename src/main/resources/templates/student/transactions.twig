    <link rel="stylesheet" type="text/css" href="http://localhost:63342/QuestStore/static/css/storeStyle.css">
</head>


<!--MENU BAR-->
<body style="background-image: url('https://drive.google.com/uc?export=view&id=19l6DneiVPd1cpM4DvgA1R_XtybUtQzh-')">

<nav class="navbar navbar-expand-sm navbar-light bg-dark">
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item active">
                <a class="nav-link" href="../student/store">STORE <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="../student/inventory">INVENTORY</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="../student/coincubator">COINcubator</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="../student/quests">QUEST</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="../student/transactions">TRANSACTIONS</a>
            </li>
        </ul>
        <ul class="navbar-nav ml-auto">
            <h2 style="margin-right: 10px!important;">Coins: {{ coins }}</h2>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-user"></i>
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                    <a class="dropdown-item" href="../student/editProfile">Edit Profile</a>
                    <a class="dropdown-item" href="../logout">Log Out</a>
                </div>
            </li>
        </ul>
    </div>
</nav>
<div id="front">
    <table style="width: 100%">
        <tr>
            <th>Transaction ID</th>
            <th>Item ID</th>
            <th>Item Name</th>
            <th>Item Description</th>
            <th>Bought Date</th>
            <th>Active Date</th>
            <th>Is Available</th>
        </tr>
        {% for itemTransaction in itemsTransactionsLists %}
            <tr>
                <td>{{ itemTransaction.transactionId }}</td>
                <td>{{ itemTransaction.itemId }}</td>
                <td>{{ itemTransaction.itemName }}</td>
                <td>{{ itemTransaction.itemDescription }}</td>
                <td>{{ itemTransaction.boughtDate }}</td>
                <td>{{ itemTransaction.useDate }}</td>
                <td>{{ itemTransaction.isAvailable }}</td>
            </tr>
        {% endfor %}

    </table>

</div>
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

</body>
